# ============================================
# WordPress Core Files (Keep in repo)
# ============================================
# Note: WordPress core files are kept for version control
# Only exclude environment-specific and generated files

# ============================================
# Environment-Specific Configuration
# ============================================
# Database credentials - must be configured per environment
wp-config.php
wp-config-staging.php
wp-config-production.php
wp-config-local.php

# Server configuration - environment-specific
.htaccess
.htpasswd
web.config

# ============================================
# WordPress Generated & Cache Files
# ============================================
# Debug logs
wp-content/debug.log
*.log

# Upgrade folder (temporary WordPress updates)
wp-content/upgrade/

# Cache directories
wp-content/cache/
wp-content/wp-cache-config.php

# Backups (should not be in version control)
wp-content/backups-dup-lite/
*.sql
*.sql.gz
*.zip
*.tar.gz

# ============================================
# Media & Uploads (Environment-Specific)
# ============================================
# User-uploaded media files - these are environment-specific
wp-content/uploads/
# But keep the directory structure
!wp-content/uploads/index.php
!wp-content/uploads/.gitkeep

# ============================================
# Third-Party Plugins (Include in Git)
# ============================================
# Plugins are included in Git for easier deployment across environments
# Keep the directory structure
!wp-content/plugins/index.php

# ============================================
# Default WordPress Themes (Exclude)
# ============================================
# Exclude default WordPress themes - not needed in version control
wp-content/themes/twenty*/
wp-content/themes/index.php

# Keep custom theme
!wp-content/themes/gloceps-theme/

# ============================================
# Must-Use Plugins (Keep Custom, Exclude Third-Party)
# ============================================
# Keep custom mu-plugins, but you can exclude third-party ones if needed
# wp-content/mu-plugins/third-party-plugin/

